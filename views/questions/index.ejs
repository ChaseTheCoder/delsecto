<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="styles/style.css" />
    <title>Questions</title>
</head>
<body>
    <%- include ('../partials/header.ejs'); -%>

    <main class="pagetext">
        <h1>Questions!</h1>
        <h4>Total questions asked: <%= questions.length %></h4>
        
      
        <h1> HTML</h1>
      
        <%  questions.forEach(question => { %>
            <div>
                
                  <% if(question.languageId === "HTML") { %>
                <a href="/questions/<%=`${question._id}`%>"> 
                    <%= question.question; %>
                    
                   
                    
                </a> 
                <% } else if(question.languageId === "HTML" && questions.length > 5) {  %>
                      <a href="questions/html">View more</a> 
                  <% }}); %>
                
            </div>
      
        <h1>CSS</h1>
      
              <%  questions.forEach(question => { %>
            <div>
                  <% if(question.languageId === "CSS") { %>
